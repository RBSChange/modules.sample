<?xml version="1.0" encoding="UTF-8"?>
<script>
	<binding fileName="modules/website/persistentdocument/import/website_binding.xml" />
	<binding fileName="modules/theme/persistentdocument/import/theme_binding.xml" />
	<binding fileName="modules/sample/setup/sample/ecom/theme-contents.xml" />
	<documentRef type="modules_form/form" byLabel="Formulaire de contact" id="contactform" />
	<documentRef type="modules_form/form" byLabel="Partager un lien" id="sharelinkform" />
	<documentRef type="modules_marketing/editableanim" byLabel="Nos bonnes affaires" id="editanim" />
	<documentRef type="modules_marketing/dynamicanim" byLabel="Nos meilleures ventes" id="newproducts" />
	<documentRef type="modules_videos/youtubevideo" byLabel="RBS CHANGE, du propriétaire à l'Open Source" id="videoyoutube1" />
	<documentRef type="modules_videos/youtubevideo" byLabel="Webinar CMS RBS Change - chapitre 1" id="videoyoutube2" />
	<documentRef type="modules_videos/video" byLabel="Video 1" id="video1" />
	<documentRef type="modules_ecomextended/facet" byLabel="documentModel" id="facet-documentModel" />
	<documentRef type="modules_ecomextended/facet" byLabel="shelfIdCompiled" id="facet-shelfIdCompiled" />
	<documentRef type="modules_ecomextended/facet" byLabel="brand" id="facet-brand" />
	<documentRef type="modules_website/systemtopic" byLabel="Consoles de jeux" id="consoles" />
	<documentRef type="modules_website/systemtopic" byLabel="Accessoires" id="accessoiries" />
	<documentRef type="modules_website/systemtopic" byLabel="Jeux" id="games" />
	<documentRef type="modules_website/systemtopic" byLabel="Bornes d'arcade" id="arcades" />
	<documentRef type="modules_website/systemtopic" byLabel="Ordinateurs" id="micro" />
	<documentRef type="modules_website/page" byLabel="Mes commandes" id="myorders" />
	<documentRef type="modules_website/page" byLabel="Mes informations" id="myinfos" />
	<documentRef type="modules_website/page" byLabel="Avantages fidélité" id="loyalty" />
	<documentRef type="modules_website/topic" byLabel="Galerie de photos" id="photos" />
	<documentRef type="modules_website/topic" byLabel="Forums" id="forums" />
	<documentRef type="modules_website/topic" byLabel="Membres" id="members" />
	<website byTag="default_modules_website_default-website" id="default-website">
		<page byLabel="Accueil">
			<changecontent for="content-block">
				<changeblock type="modules_marketing_animationList" __displayMode="slide" __cmpref-refid="editanim" />
			</changecontent>
		</page>
		<topic byLabel="Boutique">
			<page byLabel="Comparaison de produits" navigationVisibility="hidden" />
		</topic>
		<topic byLabel="Communauté" id="topiccommunity">
			<page id="pagecommunity" byLabel="Communauté" isIndexPage="true" navigationVisibility="Hidden">
				<changecontent for="sidebar-block">
					<changeblock type="modules_marketing_animationList" __displayMode="slide" __cmpref-refid="newproducts" />
				</changecontent>
				<changecontent for="content-block">
					<changeblock type="richtext"><![CDATA[
							<h1 class="heading-one">Besoin de fédérer une communauté ?</h1>
							<p class="normal">RBS Change vous propose des modules qui peuvent vous aider dans cette tâche : mise en ligne de <strong>galeries de photos ou videos</strong>,
							<strong>forums</strong>, <strong>blogging</strong>, ...
							</p>
						]]></changeblock>
				</changecontent>
			</page>
			<topic byLabel="Galerie de vidéos" id="videos">
				<page label="Exemple de vidéo youtube" isIndexPage="true">
					<changecontent for="content-block">
						<changeblock type="modules_videos_youtubevideo" __cmpref-refid="videoyoutube1" />
						<changeblock type="modules_videos_youtubevideo" __cmpref-refid="videoyoutube2" />
					</changecontent>
				</page>
				<page label="Exemple de vidéo flash">
					<changecontent for="content-block">
						<changeblock type="modules_videos_video" __cmpref-refid="video1" />
					</changecontent>
				</page>
			</topic>
		</topic>
		<topic byLabel="À propos" id="topicabout">
			<page byLabel="Annuaire" indexingstatus="false">
				<changecontent for="sidebar-block" append="true">
					<changeblock type="modules_marketing_animationList" __displayMode="slide" __sortRandom="true" __addrssfeed="false" __addlinktoall="false" __displayaddtocart="false" __useAddToCartPopin="false" __showaddtofavorite="false" __displayavailability="false" __displayratingaverage="false" __displayproductpicto="false" __displayCustomerPrice="false" __cmpref-refid="newproducts" />
				</changecontent>
				<changecontent for="content-block">
					<changeblock type="modules_contactcard_contactlist" __showContactpageLink="false" />
				</changecontent>
			</page>
			<page byLabel="Nous contacter" isIndexPage="true" navigationVisibility="visible" template-attr="templateHome" id="contactus">
				<changecontent>
					<changeblock type="modules_form_form" __cmpref-refid="contactform" />
				</changecontent>
			</page>
		</topic>
		<topic byLabel="Outils">
			<page byTag="contextual_website_website_modules_sharethis_send-email" label="Partager un lien" indexingstatus="false">
				<changecontent for="content-block">
					<changeblock type="modules_form_form" __cmpref-refid="sharelinkform" />
				</changecontent>
			</page>
		</topic>
		<topic byLabel="Nos magasins" id="topicstores" />
		<menus>
			<menu byTag="contextual_website_website_menu-main">
				<menuitempage pageid="consoles" />
				<menuitempage pageid="games" />
				<menuitempage pageid="arcades" />
				<menuitempage pageid="micro" />
				<menuitempage pageid="accessoiries" />
				<menuitempage pageid="topiccommunity" />
				<menuitempage pageid="topicstores" />
				<menuitempage pageid="topicabout" />
			</menu>
			<menu id="footer-1" byLabel="Catalogue">
				<menuitempage pageid="consoles" />
				<menuitempage pageid="games" />
				<menuitempage pageid="arcades" />
				<menuitempage pageid="micro" />
				<menuitempage pageid="accessoiries" />
			</menu>
			<menu id="footer-2" byLabel="Communauté">
				<menuitempage pageid="photos" />
				<menuitempage pageid="videos" />
				<menuitempage pageid="forums" />
				<menuitempage pageid="members" />
			</menu>
			<menu id="footer-3" byLabel="Mon compte">
				<menuitempage pageid="myorders" />
				<menuitempage pageid="myinfos" />
				<menuitempage pageid="loyalty" />
			</menu>
			<menu id="footer-4" byLabel="À propos">
				<menuitempage pageid="contactus" />
			</menu>
		</menus>
	</website>
</script>
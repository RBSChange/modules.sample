<?xml version="1.0" encoding="UTF-8"?>
<script>
	<binding fileName="modules/polls/persistentdocument/import/polls_binding.xml" />

	<rootfolder module="polls">
		<folder byLabel="m.generic.bo.general.samples">
			<attribute name="description"><![CDATA[<p class="normal">Sondage sur l'utilisation des consoles de jeux</p>]]></attribute>
			<poll byLabel="Sondage sur l'utilisation des consoles de jeux"
				description-attr="" allowAnonymousVote="true">

				<attribute name="description"><![CDATA[<p class="normal">Question à choix unique sur le temps d'utilisation</p>]]></attribute>
				<question byLabel="Conbien de temps utilisez-vous votre console par jour ?"
					maxAnswers="1" description-attr="">
					<answer byLabel="0 à 10 min" description="Très peu" />
					<answer byLabel="11 à 30 min" />
					<answer byLabel="30 min à 1h" />
					<answer byLabel="1h à 3h" />
					<answer byLabel="3h et plus" description="Trop longtemps" />
				</question>

				<attribute name="description"><![CDATA[<p class="normal">Question à choix multiple sur les types de jeux</p>]]></attribute>
				<question byLabel="À quel genre de jeux jouez-vous ?"
					description-attr="" maxAnswers="-1">
					<answer byLabel="FPS" />
					<answer byLabel="Simulation conduite" />
					<answer byLabel="Simulateur d'avion" />
					<answer byLabel="Plateforme" />
					<answer byLabel="Réflexion" />
				</question>

			</poll>
			<poll byLabel="Marque préférée">
				<question byLabel="Quel est votre marque de console préférée ?"
					maxAnswers="1">
					<answer byLabel="Nintendo" />
					<answer byLabel="SNK" />
					<answer byLabel="Sega" />
					<answer byLabel="Coleco" />
					<answer byLabel="Atari" />
				</question>
			</poll>

			<poll byLabel="Couleur des futures consoles" voterCount="39"
				endDate="2011-07-21 12:12:55">
				<question byLabel="De quelle couleur sera votre prochaine console ?"
					maxAnswers="1">
					<answer byLabel="Bleu" votes="8" />
					<answer byLabel="Rouge" votes="5" />
					<answer byLabel="Vert" votes="2" />
					<answer byLabel="Jaune" votes="4" />
					<answer byLabel="Orange" votes="0" />
					<answer byLabel="Violet" votes="7" />
					<answer byLabel="Blanc" votes="1" />
					<answer byLabel="Noir" votes="12" />
				</question>
			</poll>

		</folder>
	</rootfolder>
</script>